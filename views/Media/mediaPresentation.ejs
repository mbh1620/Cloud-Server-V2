<% include ../partials/mediaheader.ejs %>

  <div class="container" style="margin-top:100px">
    <div class="jumbotron">
      <h3>Select the video directory</h3>
      </p>
      <p>To: </p>
      <div class="form-group">
        <nav aria-label="breadcrumb">
          <ol id="breadcrumblist" class="breadcrumb bg-light">
            <li class="breadcrumb-item item active" aria-current="page"><a href="#" id="homeDirectoryButton"
              onclick="homeDirectory()"><i class="fas fa-folder"></i></a></li>
          </ol>
        </nav>

        <!-- File upload input -->
        <ul id="list" class="list-group" style="max-height: 500px; overflow: scroll;">


        </ul>
        <button class="btn btn-md btn-primary" style="float:right;margin-top:20px" onclick="selectDirectory()">Select Directory</button>
      </div>
    </div>

  </div>
  <form style="display:none" action="/media/presentation" method="POST" id="formData">
    <input type="hidden" name="directory" value="" id="directory">
  </form>

  <script type="text/javascript" src="/modules/breadCrumbScript/breadCrumb.js"></script>
  <script type="text/javascript" src="/modules/searchDirectory/search.js"></script>
  <script>

    //Move file page

    window.path = '<%= path %>'
    window.isEdit = false;

    function selectDirectory(){
      
      $('#directory').val(window.path)

      $('#formData').submit()

    }

    buildBreadcrumb(path)

    searchDirectory(path, function (files) {
      updateList(files, isEdit)
    })

  </script>
